{
  "name": "嘻嘻拼音",
  "description": "给选中的汉字标上拼音，支持生僻字，快捷键alt+b或alt+p",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": ["contextMenus", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "globalGoogle16.png",
    "48": "globalGoogle48.png",
    "128": "globalGoogle128.png"
  }
}
